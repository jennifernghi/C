#include <stdio.h>
#include <ctype.h>
void convertToUpper(char *);
int main(void){
	char string[] = "normal STring here!";

	printf("%s", string);
	convertToUpper(string);
	printf("%s", string);
}

void convertToUpper(char *sPtr){
	while(*sPtr != "\0"){
		*sPtr = toupper(*sPtr);
		++sPtr;
	}
}

